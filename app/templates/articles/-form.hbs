<form {{action "save" on="submit"}}>
  <h4>{{errorMessage}}</h4>
  <p>
      <label>Title</label>
    <div>
      {{input value=model.title}}
    </div>
  </p>
  <p>
  <label>Content</label>
    <div>
    {{input value=model.body }}
    </div>
  </p>
    <input type="submit" value="Save" />
    <button {{action "cancel"}}>Cancel</button>
</form>