<div class="panel-body">
    <form {{action "save" on="submit"}} class="form-horizontal">
        <fieldset>
            <span class="label label-danger">{{errorMessage}}</span>
            <div class="form-group">
                <label for="title" class="col-lg-2 control-label">Title</label>
                <div class="col-lg-10">
                {{input value=model.title class="form-control"}}
                    </div>
            </div>
            <div class="form-group">
                <label for="body" class="col-lg-2 control-label">Content</label>
            <div class="col-lg-10">
              {{textarea rows="10" value=model.body class="form-control" }}
            </div>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
            &nbsp;
            <button {{action "cancel"}} class="btn btn-default">Cancel</button>
        </fieldset>
    </form>
</div>